@* Declara que el modelo para esta vista es una colección de UsuarioModel *@
@model IEnumerable<BiblioApp.Models.UsuarioModel>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Especifica el layout a usar
}

<h1>@ViewData["Title"]</h1>

<p>
    @* Enlace para ir a la acción Create del UsuarioController *@
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                @* Encabezados de la tabla, usando DisplayNameFor para obtener los nombres de las propiedades del modelo *@
                <th>
                    @Html.DisplayNameFor(model => model.First().Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TipoUsuario)
                </th>
                <th>Acciones</th> @* Columna para los botones de acción *@
            </tr>
        </thead>
        <tbody>
            @* Itera sobre cada usuario en el modelo *@
            @foreach (var item in Model)
            {
                <tr>
                    @* Muestra los datos de cada usuario *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoUsuario)
                    </td>
                    <td>
                        @* Botones de acción para cada usuario, pasando el ID del item actual como parámetro de ruta *@
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>